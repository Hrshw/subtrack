{
  "extends": "../backend/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "typeRoots": [
      "../backend/node_modules/@types",
      "../node_modules/@types"
    ]
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist", "../backend/node_modules", "../frontend/node_modules"]
}

